<div class="row">
  <div class="col-12">
    <h3>Funds Transfer</h3>
  </div>

  <% if (success_msg && success_msg.length > 0) { %>
    <div class="col-12">
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <strong><%= success_msg %></strong> 
      </div>
      <script>
        $(".alert").alert();
      </script>
    </div>
    <% } %>

    <% if (error_msg && error_msg.length > 0) { %>
      <div class="col-12">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= error_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      </div>
      <% } %>

  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2">
    <h4>New Transfer</h4>
    <form action="/accounts/transfer" method="GET">
      <div class="form-group">
        <input class="form-control" name="account_number" placeholder="Enter Receiver's Account Number...">
      </div>
      <div>
        <button class="btn btn-primary" type="submit">Get Account Info</button>
      </div>
    </form>

    <% if (account_found) { %> 
    <div>
      <form action="/accounts/transfer" method="POST">
        <div class="form-group">
          <label>Account No.</label>
          <input class="form-control" name="account_number" value='<%= account.number %>'>
        </div>
        <div class="form-group">
          <label>Account Holder Name</label>
          <input class="form-control" name="account_name" value='<%= account.holder_name %>'>
        </div>
        <div class="form-group">
          <label>Enter Amount to Transfer</label>
          <input class="form-control" name="amount" type="number">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">
        </div>
      </form>
    </div>
    <% } %>
  </div>

  <div class="col-12">
    <h4>Transfer History</h4>
    <% transactions.forEach(t => { %>
      <div class="alert alert-warning" role="alert mb-3">
        Type: <strong><%= t.type %></strong> 
        Amount: <strong><%= t.amount %></strong> 
        Source: <strong><%= t.source %></strong> 
        Receiver: <strong><%= t.receiver %></strong> 
      </div>
    <% }) %>
  </div>
  <div>
</div>