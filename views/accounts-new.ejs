<%- include ('partials/top') %>
  <div class="row space">
    
    <div class="col-md-8 offset-md-2 bg-white">
      <h2 class="mb-3">Open Customer Account</h2>

      <div>
        <% if (success_msg && success_msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= success_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>

      <form action="/accounts/new" class="row" method="POST">
        <div class="form-group col-12">
          <label>Select Customer</label>
          <select class="form-control" name="customer" required>
            <option></option>
            <% customers.forEach(c => { %>
              <option value='<%= c._id %>'><%= c.surname + " " + c.first_name + " " + c.middle_name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-12">
          <label>Select Account Type</label>
          <select class="form-control" name="account_type" required>
            <option></option>
            <option value="Savings">Savings</option>
            <option value="Current">Current</option>
          </select>
        </div>
        <div class="form-group col-12">
          <label>Initial Deposit (Currency: (NGN) &#8358;)</label>
          <input required class="form-control" type="number" name="account_balance">
        </div>

        <div class="form-group col-12">
          <button type="submit" class="btn btn-primary btn-block">Proceed</button>
        </div>
      </form>
    </div>
  </div>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>